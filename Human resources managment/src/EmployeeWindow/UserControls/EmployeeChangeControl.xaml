<UserControl x:Class="Human_resources_managment.EmployeeWindow.UserControls.EmployeeChangeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Human_resources_managment.EmployeeWindow.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
               xmlns:vmEmployee="clr-namespace:Human_resources_managment.EmployeeWindow.ViewModel"
         xmlns:controlsEmployee="clr-namespace:Human_resources_managment.EmployeeWindow.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vmEmployee:EmployeeAddViewModel}">
            <controlsEmployee:EmployeeAddControl />
        </DataTemplate>
        
    </UserControl.Resources>
    <Grid>
        <Border BorderThickness="1"  BorderBrush="Crimson"  CornerRadius="5" Background="White">
            <StackPanel Orientation="Vertical">
                <Button Content="Закрыть" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" FontSize="20" Height="40" Width="100" Style="{StaticResource backBttn}" Command="{Binding CloseCommand}" Cursor="Hand" />
                <TabControl x:Name="tabControlCertificate" ItemsSource="{Binding Tabs}" SelectedItem="{Binding SelectedTab, Mode=TwoWay}"
                     Background="Transparent" BorderBrush="Transparent"
                     materialDesign:ColorZoneAssist.Foreground="Crimson"
                     materialDesign:ColorZoneAssist.Mode="Custom" Cursor=""
                     Style="{StaticResource MaterialDesignFilledTabControl}"
                     >
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Header}" FontSize="20"/>
                        </DataTemplate>
                    </TabControl.ItemTemplate>

                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding ContentViewModel}" />
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
